<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lukasabromas.calculator.MainActivity">

    <EditText
        android:layout_width="200dp"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/result"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginStart="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="56dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:layout_marginBottom="8dp"
        android:layout_height="60dp" />

    <Button
        android:text="0"
        android:layout_width="88dp"
        android:id="@+id/button0"
        app:layout_constraintLeft_toLeftOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="1"
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/newNumber" />

    <Button
        android:text="2"
        android:layout_width="88dp"
        android:id="@+id/button2"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="3"
        android:layout_width="88dp"
        android:id="@+id/button3"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="4"
        android:layout_width="88dp"
        android:id="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="5"
        android:layout_width="88dp"
        android:id="@+id/button5"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="6"
        android:layout_width="88dp"
        android:id="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="7"
        android:layout_width="88dp"
        android:id="@+id/button7"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="8"
        android:layout_width="88dp"
        android:id="@+id/button8"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="9"
        android:layout_width="88dp"
        android:id="@+id/button9"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="*"
        android:layout_width="88dp"
        android:id="@+id/buttonMultiply"
        android:backgroundTint="@android:color/holo_green_light"
        android:textSize="30sp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="@+id/buttonMinus"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3" />

    <Button
        android:text="-"
        android:layout_width="88dp"
        android:id="@+id/buttonMinus"
        android:backgroundTint="@android:color/holo_green_light"
        android:textSize="30sp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="@+id/buttonPlus"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6" />

    <Button
        android:text="+"
        android:layout_width="88dp"
        android:id="@+id/buttonPlus"
        android:backgroundTint="@android:color/holo_green_light"
        android:textSize="30sp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="@+id/buttonEquals"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9" />

    <Button
        android:text="="
        android:layout_width="88dp"
        android:id="@+id/buttonEquals"
        app:layout_constraintLeft_toRightOf="@+id/buttonDot"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
        android:backgroundTint="@android:color/holo_orange_light"
        android:textSize="30sp"
        android:layout_height="80dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp" />

    <Button
        android:text="-/+"
        android:layout_width="88dp"
        android:id="@+id/buttonNeg"
        app:layout_constraintLeft_toRightOf="@+id/buttonDot"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
        android:backgroundTint="@android:color/holo_orange_light"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="."
        android:layout_width="88dp"
        android:id="@+id/buttonDot"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        android:backgroundTint="@android:color/holo_orange_light"
        android:textSize="30sp"
        android:layout_height="80dp" />

    <Button
        android:text="/"
        android:layout_width="88dp"
        android:id="@+id/buttonDivide"
        android:backgroundTint="@android:color/holo_green_light"
        android:textSize="30sp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="@+id/buttonMultiply"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/buttonMultiply"
        app:layout_constraintBottom_toTopOf="@+id/buttonMultiply" />

    <Button
        android:text="C"
        android:layout_width="88dp"
        android:id="@+id/buttonDelete"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintBottom_toTopOf="@+id/buttonDivide"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@+id/buttonDivide"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonDivide"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operation"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/newNumber"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintBaseline_toBaselineOf="@+id/newNumber" />

    <EditText
        android:layout_width="200dp"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/newNumber"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        app:layout_constraintRight_toRightOf="@+id/result"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginTop="8dp"
        android:layout_height="60dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="90dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_begin="90dp" />

</android.support.constraint.ConstraintLayout>
