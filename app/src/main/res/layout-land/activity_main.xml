<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lukasabromas.calculator.MainActivity">

    <EditText
        android:id="@+id/result"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintLeft_toRightOf="@+id/button9" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/button2"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        app:layout_constraintLeft_toRightOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintLeft_toRightOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintLeft_toRightOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        app:layout_constraintLeft_toRightOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        app:layout_constraintLeft_toRightOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintLeft_toRightOf="@+id/button8" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        app:layout_constraintLeft_toRightOf="@+id/button0" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDivide"
        app:layout_constraintLeft_toRightOf="@+id/buttonDivide" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMultiply"
        app:layout_constraintLeft_toRightOf="@+id/buttonMultiply" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonNeg"
        app:layout_constraintLeft_toRightOf="@+id/buttonNeg" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="."
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button6" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
        app:layout_constraintLeft_toRightOf="@+id/buttonDot" />

    <Button
        android:id="@+id/buttonNeg"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="-/+"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintLeft_toRightOf="@+id/button3" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="C"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
        app:layout_constraintLeft_toRightOf="@+id/buttonEquals" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/result"
        app:layout_constraintLeft_toRightOf="@+id/result"
        app:layout_constraintRight_toLeftOf="@+id/newNumber" />

    <EditText
        android:id="@+id/newNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="numberSigned|numberDecimal"
        android:singleLine="true"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/operation"
        app:layout_constraintRight_toRightOf="@+id/buttonDelete" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="0dp"
        android:layout_height="311dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5067568"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>
